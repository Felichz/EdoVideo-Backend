{
    "name": "edovideo-node",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "set NODE_ENV=production& node index",
        "start:dev": "set DEBUG=app:*& set NODE_ENV=development& nodemon index",
        "start:inspect": "set DEBUG=app:*& set NODE_ENV=development& nodemon --inspect index",
        "test": "mocha --recursive --exit",
        "cover": "nyc npm run test",
        "report": "nyc npm run test && nyc report --reporter=html && start coverage/index.html",
        "test-packages": "snyk auth && snyk test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hapi/boom": "^9.1.0",
        "@hapi/joi": "^17.1.1",
        "dotenv-flow": "^3.1.0",
        "express": "^4.17.1",
        "helmet": "^3.23.2",
        "mongodb": "^3.5.8",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.1",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.9",
        "mocha": "^8.0.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "proxyquire": "^2.1.3",
        "sinon": "^9.0.2",
        "snyk": "^1.348.1",
        "supertest": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix"
    },
    "nyc": {
        "all": true,
        "include": [
            "routes",
            "services",
            "lib",
            "utils"
        ]
    }
